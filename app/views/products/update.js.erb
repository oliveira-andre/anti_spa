<% if @errors %>
  toastr.error("<%= @errors.first %>")
  $('form').html("<%= j render "form" %>");
<% else %>
  toastr.success("<%= t('products.form.update_success') %>")
  $('form').replaceWith("<%= j link_to t('add'), new_product_path, remote: true, class: 'button is-info', id: :form_button %>")
  $('#products_card').html("<%= j render 'products_card' %>")
  $('#product_table').html("<%= j render 'product_table' %>")
<% end %>
